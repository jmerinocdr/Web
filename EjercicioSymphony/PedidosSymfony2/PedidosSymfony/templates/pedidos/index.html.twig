{% extends 'base.html.twig' %}

{% block title %}Lista Pedidos{% endblock %}

{% block body %}
    <h1>Lista Pedidos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CodPed</th>
                <th>Fecha</th>
                <th>Enviado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for pedido in pedidos %}
            <tr>
                <td>{{ pedido.id }}</td>
                <td>{{ pedido.CodPed }}</td>
                <td>{{ pedido.Fecha ? pedido.Fecha|date('Y-m-d') : '' }}</td>
                <td>{{ pedido.Enviado }}</td>
                <td>
                    <a href="{{ path('pedidos_show', {'id': pedido.id}) }}">Ver</a>
                    <a href="{{ path('pedidos_edit', {'id': pedido.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pedidos_new') }}">Crear nuevo</a>
{% endblock %}
