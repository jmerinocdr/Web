{% extends 'base.html.twig' %}

{% block title %}Photo{% endblock %}

{% block body %}
    <h1>Photo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ photo.Name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ photo.Description }}</td>
            </tr>
            <tr>
                <th>DateTime</th>
                <td>{{ photo.DateTime ? photo.DateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Device</th>
                <td>{{ photo.Device }}</td>
            </tr>
            <tr>
                <th>Opening</th>
                <td>{{ photo.Opening }}</td>
            </tr>
            <tr>
                <th>Speed</th>
                <td>{{ photo.Speed }}</td>
            </tr>
            <tr>
                <th>ISO</th>
                <td>{{ photo.ISO }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ photo.Latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ photo.Longitude }}</td>
            </tr>
            <tr>
                <th>Favourite</th>
                <td>{{ photo.Favourite ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Hidden</th>
                <td>{{ photo.Hidden ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Archive</th>
                <td>{{ photo.Archive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ photo.Keywords }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('photo_index') }}">back to list</a>

    <a href="{{ path('photo_edit', {'id': photo.id}) }}">edit</a>

    {{ include('photo/_delete_form.html.twig') }}
{% endblock %}
