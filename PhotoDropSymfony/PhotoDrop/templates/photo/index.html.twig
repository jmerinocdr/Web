{% extends 'base.html.twig' %}

{% block title %}Photo index{% endblock %}

{% block body %}
    <h1>Photo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>DateTime</th>
                <th>Device</th>
                <th>Opening</th>
                <th>Speed</th>
                <th>ISO</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Favourite</th>
                <th>Hidden</th>
                <th>Archive</th>
                <th>Keywords</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.id }}</td>
                <td>{{ photo.Name }}</td>
                <td>{{ photo.Description }}</td>
                <td>{{ photo.DateTime ? photo.DateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ photo.Device }}</td>
                <td>{{ photo.Opening }}</td>
                <td>{{ photo.Speed }}</td>
                <td>{{ photo.ISO }}</td>
                <td>{{ photo.Latitude }}</td>
                <td>{{ photo.Longitude }}</td>
                <td>{{ photo.Favourite ? 'Yes' : 'No' }}</td>
                <td>{{ photo.Hidden ? 'Yes' : 'No' }}</td>
                <td>{{ photo.Archive ? 'Yes' : 'No' }}</td>
                <td>{{ photo.Keywords }}</td>
                <td>
                    <a href="{{ path('photo_show', {'id': photo.id}) }}">show</a>
                    <a href="{{ path('photo_edit', {'id': photo.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="15">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('photo_new') }}">Create new</a>
{% endblock %}
